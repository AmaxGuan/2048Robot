{
  "manifest_version": 2,

  "name": "2048",
  "version": "2.0.0",
  "description": "Play 2048",
  "permissions": [
    "https://gabrielecirulli.github.io/2048/*"
  ],
  "icons": {
    "48" : "sample-48.png",
    "128" : "sample-128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Play the 2048 game!"
  },
  "content_scripts": [
    {
      "matches": ["http://gabrielecirulli.github.io/2048/"],
      "js" : ["contentscript.js"]
    }
  ]
}
